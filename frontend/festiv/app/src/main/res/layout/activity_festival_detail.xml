<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202834"
    android:padding="16dp"
    tools:context=".Activities.FestivalDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reserveButton">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Festival Image -->
            <ImageView
                android:id="@+id/festivalImage"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:contentDescription="@string/festival_image"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Festival Name -->
            <TextView
                android:id="@+id/festivalName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/festivalImage"
                tools:text="Concert de Musique Classique" />

            <!-- Date Range -->
            <TextView
                android:id="@+id/festivalDateRange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/festivalName"
                tools:text="December 20 - December 25, 2024 • 2.5 hours" />

            <!-- Festival Description -->
            <TextView
                android:id="@+id/festivalDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#A8A8A8"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/festivalDateRange"
                tools:text="This is a detailed description of the festival event that will take place..." />

            <!-- Date Selection Title -->
            <TextView
                android:id="@+id/dateSelectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/select_date"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/festivalDescription" />

            <!-- Dates RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/datesRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateSelectionTitle"
                tools:itemCount="5"
                tools:listitem="@layout/item_date" />

            <!-- Hours Selection Title -->
            <TextView
                android:id="@+id/hoursSelectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/select_time"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/datesRecyclerView" />

            <!-- Hours RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hoursRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hoursSelectionTitle"
                tools:itemCount="3"
                tools:listitem="@layout/item_hour" />

            <!-- Address (clickable for maps) -->
            <TextView
                android:id="@+id/festivalAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:focusable="true"
                android:maxLines="2"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hoursRecyclerView"
                tools:text="Concert Hall, 123 Music Street, Paris" />

            <!-- Website Link (clickable for browser) -->
            <TextView
                android:id="@+id/festivalWebsite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_website"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/festivalAddress"
                tools:text="Official Website" />

            <!-- Price and Capacity -->
            <TextView
                android:id="@+id/festivalPriceCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="204dp"
                android:drawableStart="@drawable/ic_ticket"
                android:drawablePadding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/festivalWebsite"
                tools:text="Capacity: 500 | Price: €25-€75" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Reserve Button -->
    <Button
        android:id="@+id/reserveButton"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:text="@string/reserve_ticket"
        android:textAllCaps="false"
        android:textColor="#1D1B1B"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>